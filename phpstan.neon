includes:
    - vendor/larastan/larastan/extension.neon

parameters:
	level: 1
	paths:
		- app
		- bootstrap
		- config
		- database
		- lang
		- resources/views
		- routes
		- tests

	checkUnusedViews: true
	checkModelAppends: true
	checkModelProperties: true
	noEnvCallsOutsideOfConfig: true

	ignoreErrors:
		-
			message: "#Property 'id' does not exist#"
			path: app/GraphQL/Mutations/
		-
			message: "#This view is not used in the project.#"
			path: resources/views/auth/